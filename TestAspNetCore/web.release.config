<?xml version="1.0"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <location>
    <system.webServer>
      <aspNetCore>
        <environmentVariables xdt:Transform="InsertIfMissing">
          <environmentVariable name="ASPNETCORE_ENVIRONMENT" value="PRODUCTION" xdt:Locator="Match(name)" xdt:Transform="InsertIfMissing" />
        </environmentVariables>
      </aspNetCore>
      <httpProtocol xdt:Transform="InsertIfMissing">
        <customHeaders xdt:Transform="InsertIfMissing">
          <add name="X-Robots-Tag" value="noindex" xdt:Locator="Match(name)" xdt:Transform="InsertIfMissing" />
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
</configuration>
